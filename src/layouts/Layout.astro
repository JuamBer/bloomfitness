---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Bloom Fitness",
  description = "Centro de entrenamiento, fisioterapia y nutrición en Mislata, Valencia. Entrenamiento personalizado con Fran Sáez, fisioterapia con José Sáez y nutrición especializada. Mejora tu fuerza y sistema cardiovascular.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="entrenamiento personal, fisioterapia, nutrición, gimnasio Mislata, Valencia, Fran Sáez, José Sáez, fitness, salud, fuerza, cardiovascular, Bloom Fitness, centro deportivo"
    />
    <meta
      name="author"
      content="Bloom Fitness - Fran Sáez García, José Sáez García"
    />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bloomfitness.es/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Bloom Fitness" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://bloomfitness.es/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="ES-VC" />
    <meta name="geo.placename" content="Mislata, Valencia" />
    <meta name="geo.position" content="39.4699;-0.4238" />
    <meta name="ICBM" content="39.4699, -0.4238" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://bloomfitness.es/" />

    <!-- Structured Data for Local Business -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "HealthAndBeautyBusiness",
        "name": "Bloom Fitness",
        "description": "Centro de entrenamiento, fisioterapia y nutrición en Mislata, Valencia",
        "url": "https://bloomfitness.es",
        "telephone": "+34-XXX-XXX-XXX",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Calle XXXXX",
          "addressLocality": "Mislata",
          "addressRegion": "Valencia",
          "postalCode": "46920",
          "addressCountry": "ES"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 39.4699,
          "longitude": -0.4238
        },
        "openingHours": [
          "Mo-Fr 07:00-22:00",
          "Sa 08:00-20:00",
          "Su 09:00-18:00"
        ],
        "priceRange": "€€",
        "founder": [
          {
            "@type": "Person",
            "name": "Fran Sáez García",
            "jobTitle": "Entrenador Personal"
          },
          {
            "@type": "Person",
            "name": "José Sáez García",
            "jobTitle": "Fisioterapeuta"
          }
        ],
        "employee": [
          {
            "@type": "Person",
            "name": "Daniel Valencia",
            "jobTitle": "Entrenador Personal"
          },
          {
            "@type": "Person",
            "name": "Juan Sáez García",
            "jobTitle": "Consultor y Desarrollo"
          }
        ],
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Servicios Bloom Fitness",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Entrenamiento Personal",
                "description": "Entrenamiento personalizado centrado en fuerza y sistema cardiovascular"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Fisioterapia",
                "description": "Servicios de fisioterapia especializados"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Nutrición",
                "description": "Asesoramiento nutricional personalizado"
              }
            }
          ]
        },
        "areaServed": {
          "@type": "Place",
          "name": "Valencia y alrededores"
        }
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
