---
import { Image } from "astro:assets";
import type { Professional } from "../data/professionals";

interface Props {
    professionals: Professional[];
    title?: string;
    color?: string;
}

const {
    professionals,
    title = "Nuestro Equipo",
    color = "text-[var(--color-orange-strong)]",
} = Astro.props;
---

<aside class="sticky top-24 self-start space-y-2">
    <div
        class="bg-gray-900 border border-gray-800 rounded-xl overflow-hidden p-4 shadow-xl"
    >
        <h2
            class={`${color} font-bold uppercase tracking-wider text-sm mb-4 text-center`}
        >
            {title}
        </h2>

        {
            professionals.length === 0 ? (
                <p class="text-gray-400 text-sm">
                    No hay profesionales disponibles en esta Ã¡rea.
                </p>
            ) : (
                <div class="relative group/slider">
                    <div
                        class="flex overflow-x-auto snap-x snap-mandatory scrollbar-hide"
                        id={`slider-${title.replace(/\s+/g, "-").toLowerCase()}`}
                        style={{ scrollBehavior: "smooth" }}
                    >
                        {professionals.map((prof, index) => (
                            <div class="min-w-full snap-center">
                                <a
                                    href={`/equipo/${prof.slug}#professional`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="block group cursor-pointer"
                                >
                                    <div class="relative aspect-[4/6] rounded-lg overflow-hidden border border-gray-800 group-hover:border-opacity-50 transition-all duration-300">
                                        {prof.image && (
                                            <Image
                                                loading="eager"
                                                src={prof.image}
                                                alt={prof.name}
                                                class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-500"
                                            />
                                        )}
                                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-80" />
                                        <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
                                            <p class="text-white font-bold text-xl uppercase leading-none tracking-wide text-center drop-shadow-md">
                                                {prof.name
                                                    .split(" ")
                                                    .slice(0, 2)
                                                    .join(" ")}
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        ))}
                    </div>

                    {professionals.length > 1 && (
                        <div class="flex justify-center gap-2 mt-4">
                            {professionals.map((_, index) => (
                                <button
                                    class={`w-2 h-2 rounded-full transition-colors slider-dot bg-gray-700 hover:${color.replace("text-", "bg-")} cursor-pointer`}
                                    data-index={index}
                                    aria-label={`Ver profesional ${index + 1}`}
                                />
                            ))}
                        </div>
                    )}

                    {professionals.length > 1 && (
                        <>
                            <button
                                class="absolute top-1/2 left-2 transform -translate-y-1/2 p-2 text-white/70 hover:text-white bg-black/50 hover:bg-black/80 rounded-full transition-all opacity-0 group-hover/slider:opacity-100 slider-prev cursor-pointer hover:scale-110 z-10"
                                aria-label="Anterior"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2.5"
                                    stroke="currentColor"
                                    class="w-5 h-5"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M15.75 19.5L8.25 12l7.5-7.5"
                                    />
                                </svg>
                            </button>
                            <button
                                class="absolute top-1/2 right-2 transform -translate-y-1/2 p-2 text-white/70 hover:text-white bg-black/50 hover:bg-black/80 rounded-full transition-all opacity-0 group-hover/slider:opacity-100 slider-next cursor-pointer hover:scale-110 z-10"
                                aria-label="Siguiente"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="2"
                                    stroke="currentColor"
                                    class="w-4 h-4"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M8.25 4.5l7.5 7.5-7.5 7.5"
                                    />
                                </svg>
                            </button>
                        </>
                    )}
                </div>
            )
        }
    </div>
</aside>

<script>
    // Simple slider logic for all instances of the slider on the page
    document.addEventListener("astro:page-load", () => {
        const sliders = document.querySelectorAll(".group\\/slider");

        sliders.forEach((sliderContainer) => {
            const scrollContainer =
                sliderContainer.querySelector(".overflow-x-auto");
            if (!scrollContainer) return;

            const dots = sliderContainer.querySelectorAll(".slider-dot");
            const prevBtn = sliderContainer.querySelector(".slider-prev");
            const nextBtn = sliderContainer.querySelector(".slider-next");

            let autoPlayInterval: number | undefined;

            const updateDots = () => {
                const index = Math.round(
                    scrollContainer.scrollLeft / scrollContainer.clientWidth,
                );
                dots.forEach((dot, i) => {
                    if (i === index) {
                        dot.classList.add("bg-[var(--color-orange-strong)]");
                        dot.classList.remove("bg-gray-700");
                    } else {
                        dot.classList.remove("bg-[var(--color-orange-strong)]");
                        dot.classList.add("bg-gray-700");
                    }
                });
            };

            const goToSlide = (index: number) => {
                scrollContainer.scrollTo({
                    left: index * scrollContainer.clientWidth,
                    behavior: "smooth",
                });
            };

            const nextSlide = () => {
                const currentIndex = Math.round(
                    scrollContainer.scrollLeft / scrollContainer.clientWidth,
                );
                const nextIndex = (currentIndex + 1) % dots.length;
                goToSlide(nextIndex);
            };

            const prevSlide = () => {
                const currentIndex = Math.round(
                    scrollContainer.scrollLeft / scrollContainer.clientWidth,
                );
                const nextIndex =
                    (currentIndex - 1 + dots.length) % dots.length;
                goToSlide(nextIndex);
            };

            // Event Listeners
            scrollContainer.addEventListener("scroll", () => {
                // Debounce update dots visually
                window.requestAnimationFrame(updateDots);
            });

            dots.forEach((dot, index) => {
                dot.addEventListener("click", () => {
                    goToSlide(index);
                    resetAutoPlay();
                });
            });

            prevBtn?.addEventListener("click", () => {
                prevSlide();
                resetAutoPlay();
            });

            nextBtn?.addEventListener("click", () => {
                nextSlide();
                resetAutoPlay();
            });

            // Auto Play
            const startAutoPlay = () => {
                if (dots.length > 1) {
                    autoPlayInterval = window.setInterval(nextSlide, 5000);
                }
            };

            const stopAutoPlay = () => {
                if (autoPlayInterval) clearInterval(autoPlayInterval);
            };

            const resetAutoPlay = () => {
                stopAutoPlay();
                startAutoPlay();
            };

            startAutoPlay();

            // Stop on hover
            sliderContainer.addEventListener("mouseenter", stopAutoPlay);
            sliderContainer.addEventListener("mouseleave", startAutoPlay);

            // Initialize dots
            updateDots();
        });
    });
</script>

<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
