---
import { Image } from "astro:assets";
import facebookIcon from "../assets/icons/facebook-brands-solid-full.svg";
import instagramIcon from "../assets/icons/instagram-brands-solid-full.svg";
import linkedinIcon from "../assets/icons/linkedin-brands-solid-full.svg";
import tiktokIcon from "../assets/icons/tiktok-brands-solid-full.svg";
import youtubeIcon from "../assets/icons/youtube-brands-solid-full.svg";
import isotype from "../assets/isotype.svg";
---

<footer class="w-full bg-black py-12">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div class="flex flex-col items-center md:items-start">
        <Image
          src={isotype}
          alt="Bloom Fitness"
          class="h-16 w-auto mb-4 pl-2 md:pl-0"
          loading="lazy"
        />
        <p class="text-gray-200 text-sm text-center md:text-left max-w-50">
          Tu centro de entrenamiento, fisioterapia y nutrición en Mislata
        </p>
      </div>

      <div class="text-center md:text-left">
        <h3 class="text-white text-lg font-bold mb-4 uppercase tracking-wide">
          Contacto
        </h3>
        <ul class="space-y-2 text-gray-200 text-sm mb-4">
          <li>
            <a
              href="#contact"
              class="hover:text-[var(--color-orange-strong)] transition-colors duration-300"
              title="Contactar con Bloom Fitness"
              itemprop="telephone"
            >
              +34 614 04 72 69
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="hover:text-[var(--color-orange-strong)] transition-colors duration-300"
              title="Contactar con Bloom Fitness"
              itemprop="email"
            >
              contacto@bloomfitness.es
            </a>
          </li>
          <li class="pt-2">
            <a
              href="#contact"
              class="hover:text-[var(--color-orange-strong)] transition-colors duration-300"
              title="Ir al formulario de contacto"
              itemprop="address"
              itemscope
              itemtype="https://schema.org/PostalAddress"
            >
              <span itemprop="streetAddress">Pza Músico Ibars, 5</span><br />
              <span itemprop="postalCode">46920</span>
              <span itemprop="addressLocality">Mislata</span>, <span
                itemprop="addressRegion">Valencia</span
              >
            </a>
          </li>
        </ul>
      </div>

      <div class="text-center md:text-left">
        <h3 class="text-white text-lg font-bold mb-4 uppercase tracking-wide">
          Horario
        </h3>
        <ul class="space-y-2 text-gray-200 text-sm">
          <li>
            <span class="font-semibold text-white">Lunes - Viernes:</span>
            7:00 - 15:00, 16:00 - 21:00
          </li>
          <li class="pt-2">
            <span class="font-semibold text-white">Sábado:</span>
            9:00 - 12:00
          </li>
          <li class="pt-2">
            <span class="font-semibold text-white">Domingo:</span>
            Cerrado
          </li>
        </ul>
      </div>

      <div class="text-center md:text-left">
        <h3 class="text-white text-lg font-bold mb-4 uppercase tracking-wide">
          Síguenos
        </h3>
        <div class="flex justify-center md:justify-start gap-4">
          <a
            href="https://www.instagram.com/bloomfitnessmislata/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en Instagram - Bloom Fitness Mislata"
            title="Instagram de Bloom Fitness"
            class="w-10 h-10 rounded-full border-2 border-gray-600 flex items-center justify-center hover:border-[var(--color-orange-strong)] transition-colors duration-300"
          >
            <Image
              src={instagramIcon}
              alt="Instagram"
              class="w-5 h-5 brightness-0 invert"
              loading="lazy"
            />
          </a>

          <a
            href="https://www.tiktok.com/@bloomfitnessmislata"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en TikTok - Bloom Fitness Mislata"
            title="TikTok de Bloom Fitness"
            class="w-10 h-10 rounded-full border-2 border-gray-600 flex items-center justify-center hover:border-[var(--color-orange-strong)] transition-colors duration-300"
          >
            <Image
              src={tiktokIcon}
              alt="TikTok"
              class="w-5 h-5 brightness-0 invert"
              loading="lazy"
            />
          </a>

          <a
            href="https://youtube.com/@bloomfitnessmislata"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Suscríbete a nuestro canal de YouTube - Bloom Fitness"
            title="YouTube de Bloom Fitness"
            class="w-10 h-10 rounded-full border-2 border-gray-600 flex items-center justify-center hover:border-[var(--color-orange-strong)] transition-colors duration-300"
          >
            <Image
              src={youtubeIcon}
              alt="YouTube"
              class="w-5 h-5 brightness-0 invert"
              loading="lazy"
            />
          </a>

          <a
            href="https://www.facebook.com/people/Bloom-Fitness/61583805626769/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Síguenos en Facebook - Bloom Fitness"
            title="Facebook de Bloom Fitness"
            class="w-10 h-10 rounded-full border-2 border-gray-600 flex items-center justify-center hover:border-[var(--color-orange-strong)] transition-colors duration-300"
          >
            <Image
              src={facebookIcon}
              alt="Facebook"
              class="w-5 h-5 brightness-0 invert"
              loading="lazy"
            />
          </a>

          <a
            href="https://www.linkedin.com/company/bloom-fitness-mislata/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Conéctate con nosotros en LinkedIn - Bloom Fitness"
            title="LinkedIn de Bloom Fitness"
            class="w-10 h-10 rounded-full border-2 border-gray-600 flex items-center justify-center hover:border-[var(--color-orange-strong)] transition-colors duration-300"
          >
            <Image
              src={linkedinIcon}
              alt="LinkedIn"
              class="w-5 h-5 brightness-0 invert"
              loading="lazy"
            />
          </a>
        </div>
      </div>
    </div>

    <div
      class="border-t border-gray-800 pt-6 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-gray-200 text-sm text-center md:text-left">
        © {new Date().getFullYear()} Bloom Fitness. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
