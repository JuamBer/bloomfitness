<section id="contact" class="min-h-screen bg-black py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-center items-center mb-12">
      <h2
        class="text-white
      text-4xl sm:text-5xl md:text-6xl lg:text-7xl
      font-extrabold
      tracking-wider"
      >
        CONT√ÅCTANOS
      </h2>
    </div>

    <form
      id="contact-form"
      action="https://api.web3forms.com/submit"
      method="POST"
      class="space-y-8 mb-16 flex flex-col max-w-4xl mx-auto"
    >
      <input
        type="hidden"
        name="access_key"
        value="644a371c-15dc-4f54-9825-9a25ee52660a"
      />

      <input
        type="hidden"
        name="subject"
        value="üèãÔ∏è Nueva Consulta Web - Bloom Fitness"
      />

      <input type="hidden" name="from_name" value="Web Bloom Fitness" />

      <input
        type="checkbox"
        name="botcheck"
        class="hidden"
        style="display: none;"
      />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label
            for="name"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            NOMBRE COMPLETO
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-offset-0 focus:ring-[var(--color-orange-strong)] transition-all duration-300"
            style="focus:box-shadow: 0 0 0 2px var(--color-orange-strong);"
            required
            placeholder="Introduce tu nombre"
          />
        </div>
        <div>
          <label
            for="email"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            CORREO ELECTR√ìNICO
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-offset-0 focus:ring-[var(--color-orange-strong)] transition-all duration-300"
            style="focus:box-shadow: 0 0 0 2px var(--color-orange-strong);"
            required
            placeholder="Introduce tu correo electr√≥nico"
          />
        </div>
      </div>

      <div>
        <label
          for="message"
          class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
        >
          COMP√ÅRTENOS TUS METAS
        </label>
        <textarea
          id="message"
          name="message"
          rows="6"
          class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-transparent focus:outline-none focus:ring-2 focus:ring-offset-0 focus:ring-[var(--color-orange-strong)] transition-all duration-300 resize-vertical"
          style="focus:box-shadow: 0 0 0 2px var(--color-orange-strong);"
          placeholder="Cu√©ntanos sobre tus objetivos y c√≥mo podemos ayudarte"
          required></textarea>
      </div>

      <!-- Success/Error Messages -->
      <div id="form-message" class="hidden text-center p-4 rounded-lg"></div>

      <div class="flex justify-center sm:justify-end">
        <button
          type="submit"
          id="submit-btn"
          class="px-8 py-4 text-white font-bold text-lg uppercase tracking-wide rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-2xl relative overflow-hidden cursor-pointer"
          style="background: linear-gradient(135deg, var(--color-red) 0%, var(--color-orange-strong) 35%, var(--color-orange-strong) 80%);"
        >
          Enviar Mensaje
        </button>
      </div>
    </form>

    <!-- WhatsApp Floating Banner -->
    <div class="max-w-4xl mx-auto mb-12">
      <a
        href="https://wa.me/+34614047269"
        target="_blank"
        rel="noopener noreferrer"
        class="block bg-gradient-to-r from-[#25D366] to-[#20BA5A] rounded-xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-[1.02] group"
      >
        <div
          class="flex flex-col sm:flex-row items-center justify-between gap-4"
        >
          <div class="flex items-center gap-4 text-white">
            <div
              class="bg-white p-3 rounded-full group-hover:scale-110 transition-all duration-300"
            >
              <img
                src="/src/assets/icons/whatsapp-brands-solid-full.svg"
                alt="WhatsApp"
                class="w-8 h-8"
                style="filter: brightness(0) saturate(100%) invert(50%) sepia(89%) saturate(1637%) hue-rotate(98deg) brightness(94%) contrast(89%);"
              />
            </div>
            <div>
              <p class="font-bold text-xl uppercase tracking-wide">
                ¬øPrefieres WhatsApp?
              </p>
              <p class="text-base opacity-90">
                Chatea directamente con nosotros
              </p>
            </div>
          </div>
          <div
            class="flex items-center gap-2 text-white font-bold text-lg uppercase tracking-wide group-hover:gap-3 transition-all duration-300"
          >
            <span>Abrir Chat</span>
            <svg
              class="w-6 h-6 group-hover:translate-x-1 transition-transform duration-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </div>
        </div>
      </a>
    </div>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("contact-form");
        const submitBtn = document.getElementById("submit-btn");
        const formMessage = document.getElementById("form-message");

        form?.addEventListener("submit", async (e) => {
          e.preventDefault();

          submitBtn.disabled = true;
          submitBtn.textContent = "Enviando...";

          const formData = new FormData(form);

          try {
            const response = await fetch("https://api.web3forms.com/submit", {
              method: "POST",
              body: formData,
            });

            const data = await response.json();

            if (data.success) {
              formMessage.classList.remove("hidden", "bg-(--color-red)");
              formMessage.classList.add("bg-(--color-orange-strong)");
              formMessage.textContent =
                "¬°Mensaje enviado con √©xito! Te contactaremos pronto.";
              form.reset();
            } else {
              throw new Error("Error al enviar el formulario");
            }
          } catch (error) {
            formMessage.classList.remove(
              "hidden",
              "bg-(--color-orange-strong)"
            );
            formMessage.classList.add("bg-(--color-red)");
            formMessage.textContent =
              "Hubo un error al enviar el mensaje. Por favor, intenta de nuevo.";
          } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = "Enviar Mensaje";

            setTimeout(() => {
              formMessage?.classList.add("hidden");
            }, 5000);
          }
        });
      });
    </script>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8">
      <div class="text-left">
        <p class="text-gray-300 text-base sm:text-xl">
          <span class="font-medium">BLOOM FITNESS</span>
          <a
            href="tel:+34614047269"
            class="font-bold text-white hover:text-[var(--color-orange-strong)] transition-colors duration-300 inline-block"
            >+34 614 04 72 69</a
          >
        </p>
      </div>
      <div class="text-left md:text-right">
        <p class="text-gray-300 text-base sm:text-xl">
          <span class="font-medium">PZA M√öSICO IBARS, 5,</span>
          <a
            href="https://maps.app.goo.gl/iUTmr8QdNCauKDrA7"
            target="_blank"
            rel="noopener noreferrer"
            class="font-bold text-white hover:text-[var(--color-orange-strong)] transition-colors duration-300 inline-block"
            >MISLATA, VALENCIA</a
          >
        </p>
      </div>
    </div>
  </div>
</section>
