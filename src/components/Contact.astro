<section class="min-h-screen bg-black py-16">
  <div class="container mx-auto px-4 max-w-4xl">
    <!-- Header with colored dots -->
    <div class="flex justify-center items-center mb-12">
      <div class="flex space-x-2 mr-4">
        <div class="w-4 h-4 bg-orange-500 rounded-full"></div>
        <div class="w-4 h-4 bg-blue-500 rounded-full"></div>
        <div class="w-4 h-4 bg-red-500 rounded-full"></div>
      </div>
      <h2 class="text-white text-4xl md:text-6xl font-bold tracking-wider">
        CONTÁCTANOS
      </h2>
    </div>

    <!-- Contact Form -->
    <form class="space-y-8 mb-16">
      <!-- Name and Surname Row -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label
            for="nombre"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            NOMBRE
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
            required
          />
        </div>
        <div>
          <label
            for="apellido"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            APELLIDO
          </label>
          <input
            type="text"
            id="apellido"
            name="apellido"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
            required
          />
        </div>
      </div>

      <!-- Email Field -->
      <div>
        <label
          for="email"
          class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
        >
          MAIL
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
          required
        />
      </div>

      <!-- Message Field -->
      <div>
        <label
          for="mensaje"
          class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
        >
          COMPÁRTENOS TUS METAS
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="6"
          class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300 resize-vertical"
          placeholder="Cuéntanos sobre tus objetivos y cómo podemos ayudarte..."
          required></textarea>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-center">
        <button
          type="submit"
          class="bg-gradient-to-r from-orange-500 to-blue-500 text-white px-8 py-4 rounded-lg font-bold text-lg uppercase tracking-wide hover:from-orange-600 hover:to-blue-600 transform hover:scale-105 transition-all duration-300 shadow-lg"
        >
          Enviar Mensaje
        </button>
      </div>
    </form>

    <!-- Contact Information Footer -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8 border-t border-gray-800"
    >
      <div class="text-left">
        <h3 class="text-white text-lg font-bold mb-2 uppercase tracking-wide">
          BLOOM FITNESS
        </h3>
        <p class="text-gray-300 text-lg">+34 645 276 118</p>
      </div>
      <div class="text-left md:text-right">
        <p class="text-gray-300 text-lg">
          <span class="font-medium">PZA MÚSICO IBARS, 5,</span>
          <span class="font-bold text-white">MISLATA, VALENCIA</span>
        </p>
      </div>
    </div>
  </div>
</section>
