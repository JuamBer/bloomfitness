<section class="min-h-screen bg-black py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-center items-center mb-12">
      <h2 class="text-white text-4xl md:text-6xl font-bold tracking-wider">
        CONTÁCTANOS
      </h2>
    </div>

    <!-- Contact Form -->
    <form class="space-y-8 mb-16 flex flex-col max-w-4xl mx-auto">
      <!-- Name and Surname Row -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label
            for="name"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            NOMBRE
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
            required
            placeholder="Introduce tu nombre"
          />
        </div>
        <div>
          <label
            for="lastname"
            class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
          >
            APELLIDO/S
          </label>
          <input
            type="text"
            id="lastname"
            name="lastname"
            class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
            required
            placeholder="Introduce tu apellido/s"
          />
        </div>
      </div>

      <div>
        <label
          for="email"
          class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
        >
          CORREO ELECTRÓNICO
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300"
          required
          placeholder="Introduce tu correo electrónico"
        />
      </div>

      <!-- Message Field -->
      <div>
        <label
          for="message"
          class="block text-white text-lg font-medium mb-3 uppercase tracking-wide"
        >
          COMPÁRTENOS TUS METAS
        </label>
        <textarea
          id="message"
          name="message"
          rows="6"
          class="w-full px-4 py-4 bg-transparent border-2 border-gray-600 rounded-lg text-white placeholder-gray-400 focus:border-blue-500 focus:outline-none transition-colors duration-300 resize-vertical"
          placeholder="Cuéntanos sobre tus objetivos y cómo podemos ayudarte..."
          required></textarea>
      </div>

      <div class="flex justify-center">
        <button
          type="submit"
          class="cursor-pointer bg-gradient-to-r from-orange-500 to-blue-500 text-white px-8 py-4 rounded-lg font-bold text-lg uppercase tracking-wide hover:from-orange-600 hover:to-blue-600 transform hover:scale-105 transition-all duration-300 shadow-lg"
        >
          Enviar Mensaje
        </button>
      </div>
    </form>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8">
      <div class="text-left">
        <p class="text-gray-300 text-xl">
          <span class="font-medium">BLOOM FITNESS</span>
          <span class="font-bold text-white">+34 645 276 118</span>
        </p>
      </div>
      <div class="text-left md:text-right">
        <p class="text-gray-300 text-xl">
          <span class="font-medium">PZA MÚSICO IBARS, 5,</span>
          <span class="font-bold text-white">MISLATA, VALENCIA</span>
        </p>
      </div>
    </div>
  </div>
</section>
