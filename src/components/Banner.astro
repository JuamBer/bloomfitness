---
import { Image } from "astro:assets";
import banner from "../assets/banner.png";
import bornToRise from "../assets/born-to-rise.png";
---

<section class="w-full relative h-auto md:h-auto lg:h-auto">
  <!-- Mobile/Tablet: Almost full viewport height with cropped image -->
  <div class="block lg:hidden relative h-[75vh] overflow-hidden">
    <Image
      src={banner}
      alt="Bloom Fitness Banner"
      class="absolute inset-0 w-full h-full object-cover object-center"
      loading="eager"
    />
    <div class="absolute inset-0 flex flex-col justify-center px-4">
      <div class="w-full h-full flex items-start pt-5 pb-5">
        <Image
          src={bornToRise}
          alt="Born to Rise"
          class="w-full h-auto max-w-4/5 sm:max-w-md"
          loading="eager"
        />
      </div>
      <div class="w-full flex items-center justify-between pt-5 pb-5 mt-auto">
        <span
          class="font-light text-sm bg-white italic pl-2 pr-2 pt-1 pb-1 rounded-4xl text-neutral-900!"
        >
          EST.2025
        </span>
        <span class="font-bold text-sm">BORN TO RISE</span>
        <span class="font-light text-sm">BLOOM FITNESS</span>
      </div>
    </div>
  </div>

  <!-- Desktop: Original layout -->
  <div class="hidden lg:block relative h-[75vh]">
    <Image
      src={banner}
      alt="Bloom Fitness Banner"
      class="w-full h-full object-cover object-center"
      loading="eager"
    />
    <div
      class="absolute inset-0 left-1/2 -translate-x-1/2 w-full max-w-7xl flex flex-col justify-center"
    >
      <div class="w-full h-full flex items-center pt-5 pb-5">
        <Image
          src={bornToRise}
          alt="Born to Rise"
          class="w-full h-auto max-w-lg"
          loading="eager"
        />
      </div>
      <div class="w-full flex items-center justify-between pt-5 pb-5 mt-auto">
        <span
          class="font-light text-2xl bg-white italic pl-4 pr-4 pt-1 pb-1 rounded-4xl text-neutral-900!"
        >
          EST.2025
        </span>
        <span class="font-bold text-2xl">BORN TO RISE</span>
        <span class="font-light text-2xl">BLOOM FITNESS</span>
      </div>
    </div>
  </div>
</section>
