<section class="relative w-full h-[600px] bg-gray-900">
  <div class="absolute inset-0" id="map-container">
    <div
      id="map-placeholder"
      class="w-full h-full flex items-center justify-center text-white cursor-pointer"
    >
      <div class="text-center">
        <svg
          class="w-16 h-16 mx-auto mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <p class="text-lg">Haz clic para cargar el mapa</p>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mapContainer = document.getElementById("map-container");
    const placeholder = document.getElementById("map-placeholder");

    function loadMap() {
      const iframe = document.createElement("iframe");
      iframe.src =
        "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3080.1589654073234!2d-0.41965742342753906!3d39.47528197157438!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd604f0e2d6a7f27%3A0x9f1e5e2c5d1a7e3f!2sPl.%20M%C3%BAsico%20Ibars%2C%205%2C%2046920%20Mislata%2C%20Valencia!5e0!3m2!1ses!2ses!4v1728556800000!5m2!1ses!2ses";
      iframe.width = "100%";
      iframe.height = "100%";
      iframe.style.border = "0";
      iframe.allowFullscreen = true;
      iframe.loading = "lazy";
      iframe.referrerPolicy = "no-referrer-when-downgrade";
      iframe.title = "Bloom Fitness Mislata Location Map";

      if (mapContainer && placeholder) {
        mapContainer.removeChild(placeholder);
        mapContainer.appendChild(iframe);
      }
    }

    // Load map on click
    placeholder?.addEventListener("click", loadMap);

    // Or auto-load when scrolling near the map
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            setTimeout(loadMap, 500); // Small delay to prioritize more important content
            observer.disconnect();
          }
        });
      },
      {
        rootMargin: "200px", // Start loading when within 200px of viewport
      }
    );

    if (mapContainer) {
      observer.observe(mapContainer);
    }
  });
</script>
