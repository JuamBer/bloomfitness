---
import { Image } from "astro:assets";
import ColorBar from "../../components/ColorBar.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { professionals } from "../../data/professionals";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return professionals
    .filter((p) => !p.comingSoon && p.image)
    .map((professional) => ({
      params: { slug: professional.slug },
      props: { professional },
    }));
}

const { professional } = Astro.props;
---

<Layout
  title={`${professional.name} | Bloom Fitness`}
  description={professional.description}
>
  <Header />
  <ColorBar />

  <main class="min-h-screen bg-black pt-16 pb-16" id="professional">
    <div class="container mx-auto px-4 max-w-5xl">
      <a
        href="/#team"
        class="inline-flex items-center text-white hover:text-[#ED6D35] transition-colors mb-8 group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="uppercase text-sm tracking-wider">Volver al equipo</span>
      </a>

      <div class="flex flex-col lg:flex-row gap-12 items-start">
        <div class="w-full lg:w-2/5">
          {
            professional.image && (
              <Image
                src={professional.image}
                alt={professional.name}
                class="w-full aspect-[4/6] object-cover border-2 border-gray-700 rounded-md"
                transition:name={`professional-image-${professional.slug}`}
              />
            )
          }
        </div>

        <div class="w-full lg:w-3/5 text-center lg:text-left">
          <Image
            src={professional.dot}
            alt="Decorative Dot"
            class="w-8 h-8 mx-auto lg:mx-0 mb-4"
          />

          <h1
            class="text-4xl md:text-5xl font-bold text-white uppercase mb-2"
            transition:name={`professional-name-${professional.slug}`}
          >
            {professional.name}
          </h1>

          <p
            class="text-xl text-white uppercase tracking-wider mb-6"
            transition:name={`professional-area-${professional.slug}`}
          >
            {professional.area}
          </p>

          {
            professional.history && (
              <div class="mt-4">
                <h2 class="text-xl font-bold text-white uppercase mb-4">
                  Mi Historia
                </h2>
                <p class="text-gray-300 text-base leading-relaxed">
                  {professional.history}
                </p>
              </div>
            )
          }

          <div class="mt-8">
            <a
              href="/#contact"
              class="inline-block px-8 py-4 text-white font-bold text-lg uppercase tracking-wide rounded-full transition-all duration-300 shadow-lg hover:shadow-2xl relative overflow-hidden group"
            >
              <span class="relative z-10">Contactar</span>
              <div
                class="absolute inset-0 bg-gradient-to-r from-[var(--color-red)] via-[var(--color-orange-strong)] to-[var(--color-red)] bg-[length:200%_100%] group-hover:animate-[gradient-shift_2s_ease_infinite]"
              >
              </div>
            </a>
          </div>
        </div>
      </div>

      {
        professional.reviews && professional.reviews.length > 0 && (
          <div class="mt-16">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {professional.reviews.map((review) => (
                <div class="bg-gray-900 border border-gray-700 rounded-lg p-6">
                  <p class="text-gray-300 text-base leading-relaxed mb-4 italic">
                    "{review.comment}"
                  </p>
                  <p class="text-white font-semibold uppercase text-sm">
                    â€” {review.name}
                  </p>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </main>

  <ColorBar />
  <Footer />
</Layout>
