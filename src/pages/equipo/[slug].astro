---
import { Image } from "astro:assets";
import ColorBar from "../../components/ColorBar.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { professionals } from "../../data/professionals";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return professionals
    .filter((p) => !p.comingSoon && p.image)
    .map((professional) => ({
      params: { slug: professional.slug },
      props: { professional },
    }));
}

const { professional } = Astro.props;
---

<Layout
  title={`${professional.name} | Bloom Fitness`}
  description={professional.description}
>
  <Header />
  <ColorBar />

  <main class="min-h-screen bg-black pt-16 pb-16" id="professional">
    <div class="container mx-auto px-4 max-w-6xl">
      <a
        href="/#team"
        class="inline-flex items-center text-white hover:text-[#ED6D35] transition-colors mb-8 group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="uppercase text-sm tracking-wider">Volver al equipo</span>
      </a>

      <div class="flex flex-col lg:flex-row gap-12 items-start">
        <div class="w-full lg:w-1/3 lg:sticky lg:top-24">
          {
            professional.image && (
              <Image
                src={professional.image}
                alt={professional.name}
                class="w-full aspect-[4/6] object-cover border-2 border-gray-700 rounded-md"
                transition:name={`professional-image-${professional.slug}`}
                widths={[360, 480, 555, 768, 1024]}
                sizes="(max-width: 1024px) 100vw, 400px"
              />
            )
          }
        </div>

        <div class="w-full lg:w-2/3 text-center lg:text-left">
          <div
            class="flex items-center justify-center lg:justify-start gap-3 mb-2"
          >
            <Image
              src={professional.dot}
              alt="Decorative Dot"
              class="w-3 h-3"
            />
            <p
              class="text-lg text-[#ED6D35] uppercase tracking-wider font-bold"
              transition:name={`professional-area-${professional.slug}`}
            >
              {professional.area}
            </p>
          </div>

          <h1
            class="text-4xl md:text-5xl font-bold text-white uppercase mb-4"
            transition:name={`professional-name-${professional.slug}`}
          >
            {professional.name}
          </h1>

          <div
            class="flex flex-wrap gap-6 mb-4 justify-center lg:justify-start"
          >
            {
              professional.whatsapp && (
                <a
                  href={`https://wa.me/${professional.whatsapp.replace(/\D/g, "")}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-gray-400 hover:text-[#ED6D35] transition-colors text-sm"
                >
                  <svg
                    class="w-4 h-4"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                  </svg>
                  <span>{professional.whatsapp}</span>
                </a>
              )
            }

            {
              professional.email && (
                <a
                  href={`mailto:${professional.email}`}
                  class="inline-flex items-center gap-2 text-gray-400 hover:text-[#ED6D35] transition-colors text-sm"
                >
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    />
                  </svg>
                  <span>{professional.email}</span>
                </a>
              )
            }
          </div>

          {
            professional.history && (
              <div class="text-justify text-gray-300 text-base leading-relaxed space-y-4">
                {professional.history.split("\\n").map((paragraph) => (
                  <p class="whitespace-pre-wrap">{paragraph}</p>
                ))}
              </div>
            )
          }
        </div>
      </div>

      {
        professional.reviews && professional.reviews.length > 0 && (
          <div class="mt-16">
            <h2 class="text-3xl font-bold text-white uppercase mb-8 text-center lg:text-left">
              Opiniones
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {professional.reviews.map((review) => (
                <div class="bg-gray-900 border border-gray-700 rounded-lg p-6">
                  <p class="text-gray-300 text-base leading-relaxed mb-4 italic">
                    "{review.comment}"
                  </p>
                  <p class="text-white font-semibold uppercase text-sm">
                    â€” {review.name}
                  </p>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </main>

  <ColorBar />
  <Footer />
</Layout>
